<%- include('partials/head.ejs') %>

<title>Home</title>
</head>

<body>
    <div class="container"></div><!-- main container-fluid -->
        <!--navBar-->
        <%- include('partials/menu.ejs') %>
        
        <!-- Carousel -->
        <%- include('partials/carousel.ejs') %>
        
        <!-- Inicio do conteúdo -->
        <div class="row card bg-light mt-2">
            <div class="col-12 card-body py-2 mx-auto bg-warning">
                <hr>
                <h2 class="dysplay-2 text-align-justify text-center text-break text-light">Encontre um amigo!!!</h2>
                <hr>

                <div class="modal fade" id="tela" data-bs-backdrop="static" aria-labelledby="frmTitulo" aria-hidden="true">
                    <div class="modal-dialog modal-lg " >
                        <div class="modal-content card">
                            <div class="modal-header card-header bg-info">
                                <h3 class="py-1 text-light modal-title ms-auto" id="frmTitulo">Registrar Interesse</h3>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body card-body">
                                <form id="frmCadastro" class="row" autocomplete="on"></form>
                            </div>
                            <div class="modal-footer card-footer">
                                <button type="button" id="btnSalvar" class="btn btn-primary" 
                                        onclick="" accesskey="s" style="width: 100px;">Salvar
                                </button>
                                <button type="button" id="btnCancelar" class="btn btn-secondary" 
                                        data-bs-dismiss="modal" accesskey="c" style="width: 100px;">Cancelar
                                </button>
                                
                            </div>
                        </div>
                    </div>
                </div>


            </div>
          
            <%- include('partials/modal_interesse.ejs') %>
            <div class="pt-3 container"><!--Div de Itens - Conteúdo-->
                <div class="row"> <!-- Linha de conteúdo -->

                    <% dados.forEach((pet)=>{  %>
                    
                        <div class="col-md-4 col-sm-12 mb-3"> <!-- 1º item de conteúdo --> 
                            <div class="card shadow rounded">
                            <img src="img/petDefault.jpg" class="card-img-top img-fluid" alt="...">
                            <div class="card-body">
                                <h3 class="card-title display-5 fs-2"><strong><%= pet.nome %></strong></h5>
                                <strong class="card-text text-break fs-4"><%= pet.especie %></strong>
                                <p class="card-text text-break fs-5"><strong>Idade: </strong><small><%= pet.idade %></small></p>
                                <p class="card-text fs-5"><strong> Obs: </strong><small><%= pet.obs %></small></p>
                                <button onclick="abrirModalInteresse(this.value)" value="<%= pet.id %>"  class="btn btn-roxo py-3 fs-5"><strong>Registrar Interesse</strong></button>
                            </div>
                            </div>
                        </div> <!--Fim 1º item de conteúdo -->
                    <% }) %>
                </div> <!-- Fim linha de conteúdo -->
            </div><!-- Fim itens de conteúdo -->
        </div> <!--Fim Container conteúdo-->
    </div><!-- Fim do main container-fluid -->    
    <!-- Rodapé-->
    <%- include('partials/footer.ejs') %>
    
 

</body>

</html>